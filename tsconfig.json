{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "socket.io": ["node_modules/socket.io", "server/types/socket.io"] 
    },
    "typeRoots" : ["server/types", "node_modules/@types"]
  },
  "include": ["server/**/*"],
}